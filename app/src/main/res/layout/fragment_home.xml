<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragmenthome"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="535dp"
        android:layout_marginStart="5dp"

        android:layout_marginEnd="5dp"
        android:background="@drawable/backgound_activity_activity_history_store_house"
        android:elevation="10dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ListView
            android:id="@+id/lv_ListPond"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:dividerHeight="5dp"


            android:scrollbarSize="15dp" />



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="10dp"
        android:text="Tải lại" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="270dp"
        android:layout_marginRight="10dp"
        android:text="Thêm ao" />

    <ImageView
        android:id="@+id/btn_ThemAo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="540dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:text="Button"
        android:src="@drawable/iconaddpond"/>
    <ImageView
        android:id="@+id/btn_Reload"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="540dp"
        android:text="Button"
        android:src="@drawable/reload_50"/>

</FrameLayout>