<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".controller.AddPondActivity">

    <include layout="@layout/toolbareditao" />

    <LinearLayout
        android:id="@+id/ll_AddPond"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_Add_AnhAo"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/ao" />

    </LinearLayout>

    <TextView
        android:id="@+id/checkbox_Qui_ThemAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/iconcategory"
        android:drawablePadding="10dp"
        android:ems="10"

        android:hint="Mùa vụ"
        android:inputType="textCapWords"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_AddPond" />

    <EditText
        android:id="@+id/edit_TenAo_ThemAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/iconao"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Tên ao"
        android:maxLength="20"
        android:inputType="textCapWords"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_Loai_ThemAo" />

    <EditText
        android:id="@+id/edit_DienTichAo_ThemAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:drawableLeft="@drawable/iconlocation"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Diện tích ao m²"
        android:inputType="numberDecimal"
        android:maxLength="10"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_DienTich_ThemAo" />

    <EditText
        android:id="@+id/edit_LuongCa_ThemAo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/input_bg"
        android:textSize="20sp"
        android:drawableLeft="@drawable/iconweight"
        android:drawablePadding="10dp"
        android:ems="10"
        android:maxLength="10"
        android:hint="Lượng cá giống (tấn)"
        android:inputType="number"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_DienTich_ThemAo" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/btn_bg"
        android:drawableLeft="@drawable/iconfish"
        android:drawablePadding="10dp"
        android:ems="10"
        android:hint="Giống cá"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edit_LuongCa_ThemAo"/>

    <Button
        android:id="@+id/btn_DongY_ThemAo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_bg"
        android:text="Đồng ý"
        android:layout_gravity="center"
        app:layout_constraintEnd_toEndOf="@+id/edit_NgayKetThuc_ThemAo"
        app:layout_constraintStart_toStartOf="@+id/edit_NgayKetThuc_ThemAo"
        app:layout_constraintTop_toBottomOf="@+id/edit_NgayKetThuc_ThemAo" />

</LinearLayout>