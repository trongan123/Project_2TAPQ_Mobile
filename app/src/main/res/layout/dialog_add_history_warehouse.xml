<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_corner_16"
    android:orientation="vertical"
    android:layout_margin="16dp"
    android:spinnerMode="dialog">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:gravity="center"
        android:background="@drawable/bg_yellow_corner_16_top_left_top_right"
        android:text="Thêm sản phẩm"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="14sp"
            android:textColor="@android:color/black"
            android:text="Vui long điền thông tin vào"/>

        <EditText
            android:id="@+id/edt_Add_TenSanPham_Kho"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLength="50"
            android:hint="Tên sản phẩm : "
            android:inputType="textCapWords"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edt_Add_SoLuong_Kho"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLength="5"
            android:hint="Số lượng : "
            android:inputType="number"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"/>

        <Spinner
            android:id="@+id/edt_Add_Loai_Kho"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:hint="Loại : "
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"/>

        <EditText
            android:id="@+id/edt_Add_MoTa_Kho"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:maxLength="50"
            android:hint="Mô tả : "
            android:inputType="textCapWords"
            android:background="@drawable/bg_white_corner_10_border_gray"
            android:padding="12dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_HuyAdd_Kho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="10dp"
            android:textSize="14sp"
            android:alpha="0.4"
            android:background="@drawable/bg_gray_corner_10"
            android:text="Hủy"/>
        <Button
            android:id="@+id/btn_LuuAdd_Kho"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:background="@drawable/bg_yellow_corner_10"
            android:text="Lưu"/>
    </LinearLayout>

</LinearLayout>