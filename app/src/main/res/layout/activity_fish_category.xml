<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv_PondCategoryOfFishCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="68dp"
        android:layout_marginEnd="198dp"
        android:layout_marginBottom="76dp"
        android:background="@drawable/backgound_fish_category"
        android:elevation="10dp"
        android:text="Pond Category"
        android:textColor="#000000"
        android:textSize="27dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/img_Logo_FishCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout

        android:id="@+id/linearLayout"
        android:layout_width="410dp"
        android:layout_height="435dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_Logo_FishCategory"
        android:background="@drawable/backgound_fish_category"
        android:elevation="10dp">

        <TextView
            android:id="@+id/tvCategory_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="Category Name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_categoryname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Input Category Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_HarvestTime"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Harvest Time"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_HarvestTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Input Harvest Name"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_Description_PondCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="20dp"
            android:text="Category Name"
            android:textSize="25dp"
            android:textStyle="bold"
            android:textColor="#000000"/>

        <EditText
            android:id="@+id/edt_Description_PondCategory"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="5dp"
            android:text="Input Description"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_Previous_FishCategory"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginStart="35dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:backgroundTint="#EEEEEE"
                android:text="Previous"
                android:textColor="#000000"
                android:background="@drawable/backgound_fish_category"
                android:elevation="10dp"/>

            <Button

                android:id="@+id/btn_Next_FishCategory"
                android:layout_width="30dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="35dp"
                android:layout_weight="1"
                android:backgroundTint="#EEEEEE"
                android:text="Next"
                android:textColor="#000000"
                android:background="@drawable/backgound_fish_category"
                android:elevation="10dp"/>
        </LinearLayout>

    </LinearLayout>
    <com.google.android.material.imageview.ShapeableImageView

        android:id="@+id/img_Logo_FishCategory"
        android:layout_width="139dp"
        android:layout_height="125dp"
        android:adjustViewBounds="true"
        android:layout_marginTop="188dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        app:shapeAppearanceOverlay="@style/roundimageview"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.206"
        android:src="@drawable/logo_nhomdoan"
        android:elevation="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>