<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".controller.CheckMailOTPActivity"
    android:background="#FFFFFF">


    <ImageView
        android:id="@+id/btn_back_CheckMailOTP"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="363dp"
        android:src="@drawable/ic_arrowback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginStart="145dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="146dp"
        android:src="@drawable/ic_lock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:tint="#000000" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="190dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:layout_marginStart="130dp"
        android:layout_marginTop="97dp"
        android:layout_marginEnd="131dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Xác thực Email"
        android:textColor="#000000"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="Nhập Email để xác thực bằng cách lấy mã OTP từ Email đã nhập"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <LinearLayout
        android:id="@+id/box2"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/tv_inputCode_Mail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/backgound_corners_forgotpassword"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:inputType="number"
            android:drawableTint="#000000"
            android:fontFamily="sans-serif"
            android:maxLength="4"
            android:hint="Nhập code từ email"
            android:paddingLeft="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_CheckMail2_OTP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/backgound_corners_forgotpassword"
            android:text="Nhập mã code từ email"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/box1"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

        <EditText
            android:id="@+id/tv_inputEmail_checkMail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/backgound_corners_forgotpassword"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="16dp"
            android:drawableTint="#000000"
            android:fontFamily="sans-serif"
            android:hint="Nhập emial của bạn"
            android:paddingLeft="16dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_CheckMail_OTP"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/backgound_corners_forgotpassword"
            android:text="Gửi Mã OTP"
            android:textSize="20dp" />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>